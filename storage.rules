rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Auth utils
    function isAuthenticated() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    function isAdmin() {
      return isAuthenticated() &&
        request.auth.token.email == 'grondin.stephane@gmail.com';
    }
    function isSpecificUser(email) {
      return isAuthenticated() && request.auth.token.email == email;
    }

    // Validation fichier (types/tailles/extensions/longueur)
    function isValidFileType() {
      return request.resource.contentType.matches('application/pdf') ||
             request.resource.contentType.matches('image/jpeg') ||
             request.resource.contentType.matches('image/png');
    }
    function isValidFileSize() {
      return request.resource.size <= 10 * 1024 * 1024; // ≤ 10MB
    }
    function hasValidExtension() {
      // Vérifie l’extension du nom complet (chemin inclus)
      return request.resource.name.matches('.*\\.(pdf|jpg|jpeg|png)$');
    }
    function isReasonableName() {
      // Longueur raisonnable pour chemin + nom (évite bloquer "/")
      return request.resource.name.size() <= 1024;
    }

    // Documents de consultation
    match /users/{userId}/consultations/{consultationId}/documents/{allPaths=**} {
      allow read: if isOwner(userId) || isAdmin() || isSpecificUser('julie.boddaert@hotmail.fr');
      allow write, delete: if (isOwner(userId) || isAdmin() || isSpecificUser('julie.boddaert@hotmail.fr')) &&
                           isValidFileType() && isValidFileSize() &&
                           hasValidExtension() && isReasonableName();
    }

    // Documents patients
    match /users/{userId}/patients/{patientId}/{allPaths=**} {
      allow read: if isOwner(userId) || isAdmin() || isSpecificUser('julie.boddaert@hotmail.fr');
      allow write, delete: if (isOwner(userId) || isAdmin() || isSpecificUser('julie.boddaert@hotmail.fr')) &&
                           isValidFileType() && isValidFileSize() &&
                           hasValidExtension() && isReasonableName();
    }

    // Autres documents utilisateur (cabinet, factures, etc.)
    match /users/{userId}/{allPaths=**} {
      allow read: if isOwner(userId) || isAdmin() || isSpecificUser('julie.boddaert@hotmail.fr');
      allow write, delete: if (isOwner(userId) || isAdmin() || isSpecificUser('julie.boddaert@hotmail.fr')) &&
                           isValidFileType() && isValidFileSize() &&
                           hasValidExtension() && isReasonableName();
    }

    // Blocage du reste
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
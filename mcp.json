    },
    "functions": {
      "path": "functions",
      "manifest": "functions/package.json",
      "build_command": "npm --prefix functions run build",
      "serve_command": "npm --prefix functions run serve",
      "deploy_command": "npm --prefix functions run deploy || firebase deploy --only functions",
      "runtime": "node18",
      "main": "lib/index.js",
      "emulator_port": 5001,
      "notes": "Firebase Cloud Functions (TypeScript -> lib via tsc)."
    },
    "sdk": {
      "path": "sdk",
      "manifest": "sdk/package.json",
      "build_command": "npm --prefix sdk run build",
      "output_dir": "sdk/dist",
      "notes": "SDK package construit avec tsc."
    }
  },
  "firebase": {
    "config_file": "firebase.json",
    "firestore_rules": "firestore.rules",
    "storage_rules": "storage.rules",
    "indexes": "firestore.indexes.json",
    "notes": "Le projet contient firebase.json, les règles et les indexes."

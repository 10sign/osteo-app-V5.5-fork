  "tests": {
    "unit_test_command": "npm test",
    "ci_test_command": "npm run test:run",
    "framework": "vitest"
  },
  "recommended_ci_steps": [
    "Install dependencies: npm ci",
    "Build SDK: npm --prefix sdk run build",
    "Build functions: npm --prefix functions run build",
    "Build frontend: npm run build",
    "Run tests: npm run test:run"
  ],
  "env_and_secrets": {
    "example_files": [".firebaserc", "firebase.json"],
    "note": "Pas de .env commit — configurer les secrets en CI/hosting/GitHub."
  },
  "ports": {
    "frontend_dev": 5175,
    "functions_emulator": 5001
